<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".login.LoginActivity">

    <!-- 1. 이미지 뷰: 부모의 상단에 고정 -->

    <!-- 2. 타이틀 텍스트: 이미지 뷰 바로 아래에 배치 -->
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="287dp"
        android:layout_height="160dp"
        android:layout_marginTop="140dp"
        android:contentDescription="SCSA Logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/scsa3" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/login_title"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <!-- 3. 아이디 입력창: 타이틀 텍스트 아래에 배치 -->
    <EditText
        android:id="@+id/idInput"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_text_border"
        android:hint="@string/id_hint"
        android:inputType="text"
        android:paddingHorizontal="16dp"
        android:textColor="@color/black"
        android:textColorHint="#808080"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <!-- 4. 비밀번호 입력창: 아이디 입력창 아래에 배치 -->
    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_border"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        android:paddingHorizontal="16dp"
        android:textColor="@color/black"
        android:textColorHint="#808080"
        app:layout_constraintEnd_toEndOf="@+id/idInput"
        app:layout_constraintStart_toStartOf="@+id/idInput"
        app:layout_constraintTop_toBottomOf="@+id/idInput" />

    <!-- 5. 로그인 버튼: 비밀번호 입력창 아래에 배치 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/scsa_blue"
        android:text="@string/login_button"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/passwordInput"
        app:layout_constraintStart_toStartOf="@+id/passwordInput"
        app:layout_constraintTop_toBottomOf="@+id/passwordInput" />

</androidx.constraintlayout.widget.ConstraintLayout>