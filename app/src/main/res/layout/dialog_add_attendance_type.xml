<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <EditText
        android:id="@+id/et_type_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="유형 이름 (예: 단축 수업)"
        android:inputType="text"/>

    <EditText
        android:id="@+id/et_earliest_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="출근 시작 시간 (HH:mm:ss)"
        android:inputType="time"/>

    <EditText
        android:id="@+id/et_start_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="수업 시작 시간 (HH:mm:ss)"
        android:inputType="time"/>

    <EditText
        android:id="@+id/et_end_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="수업 종료 시간 (HH:mm:ss)"
        android:inputType="time"/>

    <EditText
        android:id="@+id/et_latest_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="퇴근 마감 시간 (HH:mm:ss)"
        android:inputType="time"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/btn_cancel_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="취소"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/btn_confirm_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="추가"/>
    </LinearLayout>

</LinearLayout>
